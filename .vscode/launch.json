    "version": "0.2.0",
    "configurations": [
        {
            "type": "browser-preview",
            "name": "Browser Preview: Attach",
            "request": "attach"
        },
        {
            "type": "browser-preview",
            "request": "launch",
            "name": "Browser Preview: Launch",
            "url": "http://localhost:5500"
        },
        {
            "type": "kotlin",
            "request": "launch",
            "name": "Kotlin Launch",
            "projectRoot": "${fileDirname}/",
            "mainClass": "${fileBasenameNoExtension}"
        },
        {
            "type": "kotlin",
            "request": "launch",
            "name": "Kotlin Compile & Launch",
            "projectRoot": "${fileDirname}/",
            "mainClass": "${fileBasenameNoExtension}",
            "preLaunchTask": "mvn compile"
        }
    ]
}